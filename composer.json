{
    "name": "wfu/wordpress-base",
    "description" : "WFU WP application base.",
    "require": {
        "php": ">= 7.0",
        "aws/aws-sdk-php": "~3",
        "composer/installers": "1.*",
        "johnpbloch/wordpress": "5.3.1",
        "phpmailer/phpmailer": "6.*",
        "wfu/wfu" : "~1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5",
        "phpunit/php-code-coverage": "~4",
        "wfu/wp-plugin-golinks": "~0",
        "wfu/wp-theme-fundraising": "~0"
    },
    "autoload": {
        "psr-4": {
            "Wfu\\Wp\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:wakeforestuniversity/wfu-wp-plugins-golinkshortener.git"
        },
        {
            "type": "git",
            "url": "git@github.com:wakeforestuniversity/wfu-wp-themes-fundraising.git"
        },
        {
            "type": "git",
            "url": "git@github.com:wakeforestuniversity/wfu-wfu.git"
        }
    ],
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp/wp-content/themes/{$name}/": ["type:wordpress-themes"]
        }
    }
}
